<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_sub_body</item>
    </style>

    <style name="EditTextLayout">
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_size_title</item>

    </style>

    <style name="TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="cornerRadius">@dimen/spacing_medium</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/spacing_medium
        </item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="TextStyleProductPrice">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal_12</item>
        <item name="android:paddingEnd">@dimen/spacing_normal_12</item>
        <item name="android:paddingTop">@dimen/spacing_small_6</item>
        <item name="android:paddingBottom">@dimen/spacing_small_6</item>
    </style>

    <style name="TextStyleProductName">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="TextStyleProductDescription">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
    </style>
</resources>