<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_16"
        tools:context="org.the_chance.honeymart.ui.orders.OrderDetailsFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_order"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/spacing_8"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view_order_frame"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_order_frame"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_order_name"
                    style="@style/Theme.HoneyMart.Text.H1.DarkModerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_marginTop="@dimen/spacing_24"
                    app:layout_constraintStart_toEndOf="@id/view_order_frame"
                    app:layout_constraintTop_toTopOf="parent"
                    tool:text="Order#4532" />

                <TextView
                    android:id="@+id/text_order_time"
                    style="@style/Theme.HoneyMart.Text.H5.DarkIntense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:drawableStart="@drawable/icon_clock"
                    android:drawablePadding="@dimen/spacing_8"
                    app:layout_constraintStart_toStartOf="@id/text_order_name"
                    app:layout_constraintTop_toBottomOf="@id/text_order_name"
                    tool:text="12.32 P.M" />

                <TextView
                    android:id="@+id/text_order_price"
                    style="@style/Theme.HoneyMart.Text.H3.DarkModerate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:drawablePadding="@dimen/spacing_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    tool:text="30,000$" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingVertical="@dimen/spacing_8"
            tools:listitem="@layout/item_product"
            app:layout_constraintTop_toBottomOf="@id/card_order"
            app:layout_constraintBottom_toTopOf="@id/button_done" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_done"
            style="@style/Theme.HoneyMart.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            app:icon="@drawable/icon_cart_white"
            android:background="@drawable/button_background"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/done" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>