<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        style="@style/Theme.HoneyMart.Card"
        android:layout_margin="@dimen/spacing_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_order_name"
                style="@style/Theme.HoneyMart.Text.H3.DarkModerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Order#4532" />

            <TextView
                android:id="@+id/text_user_name"
                style="@style/Theme.HoneyMart.Text.H5.DarkIntense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/spacing_8"
                app:layout_constraintStart_toStartOf="@id/text_order_name"
                app:layout_constraintTop_toBottomOf="@id/text_order_name"
                tool:text="Full Name" />

            <TextView
                android:id="@+id/text_order_time"
                style="@style/Theme.HoneyMart.Text.H5.DarkIntense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:drawableStart="@drawable/icon_clock"
                android:drawablePadding="@dimen/spacing_8"
                app:layout_constraintStart_toStartOf="@id/text_order_name"
                app:layout_constraintTop_toBottomOf="@id/text_user_name"
                tool:text="12.32 P.M" />

            <TextView
                android:id="@+id/text_order_price"
                style="@style/Theme.HoneyMart.Text.H3.DarkModerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_8"
                android:drawableStart="@drawable/icon_dollar"
                android:drawablePadding="@dimen/spacing_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                tool:text="30,000" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>