<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/marketsFragment">

    <fragment
        android:id="@+id/marketsFragment"
        android:name="org.the_chance.honeymart.ui.feature.market.MarketsFragment"
        android:label="MarketsFragment"
        tools:layout="@layout/fragment_markets">
        <action
            android:id="@+id/action_marketsFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/marketsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="org.the_chance.honeymart.ui.feature.category.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_productsFragment"
            app:destination="@id/productsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/categoriesFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="marketId"
            app:argType="long" />

    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="org.the_chance.honeymart.ui.feature.product.ProductsFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_products">
        <argument
            android:name="categoryId"
            app:argType="long" />
        <argument
            android:name="marketId"
            app:argType="long" />
        <argument
            android:name="position"
            app:argType="integer" />
        <action
            android:id="@+id/action_productsFragment_to_user_nav_graph"
            app:destination="@id/user_nav_graph"
            app:exitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_productsFragment_to_productDetails"
            app:destination="@id/productDetails"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/productsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="org.the_chance.honeymart.ui.feature.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_marketsFragment"
            app:destination="@id/marketsFragment" />
        <action
            android:id="@+id/action_cartFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_cartFragment_to_cartBottomFragment"
            app:destination="@id/cartBottomFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="org.the_chance.honeymart.ui.feature.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_marketsFragment"
            app:destination="@id/marketsFragment"
            app:popUpTo="@id/marketsFragment"/>
        <action
            android:id="@+id/action_ordersFragment_to_user_nav_graph"
            app:destination="@id/user_nav_graph" />
        <action
            android:id="@+id/action_ordersFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/wishListFragment"
        android:name="org.the_chance.honeymart.ui.feature.wishlist.WishListFragment"
        android:label="WishListFragment">
        <action
            android:id="@+id/action_wishListFragment_to_marketsFragment"
            app:destination="@id/marketsFragment"
            app:popUpTo="@id/marketsFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderDetailsFragment"
        android:name="org.the_chance.honeymart.ui.feature.orderdetails.OrderDetailsFragment"
        android:label="OrderDetailsFragment" />
    <dialog
        android:id="@+id/cartBottomFragment"
        android:name="org.the_chance.honeymart.ui.feature.cart.CartBottomFragment"
        android:label="CartBottomFragment"
        tools:layout="@layout/bottom_sheet_complete_cart_order">
        <action
            android:id="@+id/action_cartBottomFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
    </dialog>
    <dialog
        android:id="@+id/signupDialog"
        android:name="org.the_chance.honeymart.ui.feature.login.LoginDialogFragment"
        android:label="SignupDialog" />
    <fragment
        android:id="@+id/productDetails"
        android:name="org.the_chance.honeymart.ui.feature.product_details.ProductDetailsFragment"
        android:label="ProductDetails"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="productId"
            app:argType="long" />
        <action
            android:id="@+id/action_productDetails_to_user_nav_graph"
            app:destination="@id/user_nav_graph"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <navigation
        android:id="@+id/user_nav_graph"
        app:startDestination="@id/authFragment">
        <fragment
            android:id="@+id/authFragment"
            android:name="org.the_chance.honeymart.ui.feature.authentication.AuthFragment"
            android:label="AuthFragment"
            tools:layout="@layout/fragment_auth">
            <action
                android:id="@+id/action_authFragment_to_signupFragment"
                app:destination="@id/signupFragment"
                app:popUpTo="@id/authFragment" />
            <argument
                android:name="currentProductId"
                android:defaultValue="1L"
                app:argType="long" />
            <action
                android:id="@+id/action_authFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/authFragment" />
        </fragment>
        <fragment
            android:id="@+id/loginFragment"
            android:name="org.the_chance.honeymart.ui.feature.login.LoginFragment"
            android:label="LoginFragment"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_signupFragment"
                app:destination="@id/signupFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_loginFragment_pop"
                app:popExitAnim="@android:anim/slide_in_left"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/signupFragment"
            android:name="org.the_chance.honeymart.ui.feature.signup.SignupFragment"
            android:label="SignupFragment"
            tools:layout="@layout/fragment_signup_details">
            <action
                android:id="@+id/action_signupFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/signupFragment" />
            <action
                android:id="@+id/action_signupFragment_to_signupConfirmPasswordFragment"
                app:destination="@id/signupConfirmPasswordFragment"
                app:popUpTo="@id/signupFragment" />
        </fragment>
        <fragment
            android:id="@+id/signupConfirmPasswordFragment"
            android:name="org.the_chance.honeymart.ui.feature.signup.SignupConfirmPasswordFragment"
            android:label="SignupConfirmPasswordFragment"
            tools:layout="@layout/fragment_signup_conform_password">
            <action
                android:id="@+id/action_signupConfirmPasswordFragment_pop"
                app:popExitAnim="@android:anim/slide_in_left"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>


</navigation>