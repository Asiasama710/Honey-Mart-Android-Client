<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.the_chance.honeymart.ui.feature.wishlist.WishListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.the_chance.honeymart.ui.feature.wishlist.WishListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_wish_list_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wish_list_placeholder"
                android:layout_gravity="center"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_placeholder_title"
                style="@style/Theme.HoneyMart.Text.H3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_wishlist"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/spacing_32"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_placeholder_description"
                style="@style/Theme.HoneyMart.Text.H5"
                android:textColor="@color/black_37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_description"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="@dimen/spacing_16"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_discover_markets"
                style="@style/Theme.HoneyMart.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discover_new_markets"
                app:icon="@drawable/icon_cart_white"
                android:layout_margin="@dimen/spacing_16"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_8"
                />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>