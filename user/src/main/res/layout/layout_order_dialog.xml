<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="328dp"
        android:layout_height="257dp"
        android:layout_marginTop="273dp"
        app:cardCornerRadius="@dimen/radius_16"
        app:strokeWidth="@dimen/stroke_zero"
        android:background="@color/white_300"
        android:layout_marginHorizontal="@dimen/spacing_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_warning"
                android:layout_marginStart="127dp"
                android:layout_marginEnd="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/text_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_32"
                android:text="@string/order_dialog"
                android:gravity="center"
                android:layout_marginHorizontal="28dp"
                style="@style/Theme.HoneyMart.Text.H4.DarkModerate"
                app:layout_constraintTop_toBottomOf="@id/ic_warning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sure"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:text="@string/yes_i_m_sure"
                android:layout_marginVertical="@dimen/spacing_32"
                android:layout_marginStart="@dimen/spacing_16"
                android:background="@drawable/button_background"
                style="@style/Theme.HoneyMart.Text.H5.Light"
                app:layout_constraintTop_toBottomOf="@id/text_dialog"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/spacing_32"
                android:layout_marginStart="@dimen/spacing_8"
                android:text="@string/cancel"
                style="@style/Theme.HoneyMart.Text.H5.DarkIntense"
                android:background="@drawable/button_background_white"
                app:layout_constraintTop_toBottomOf="@id/text_dialog"
                app:layout_constraintStart_toEndOf="@id/button_sure" />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>