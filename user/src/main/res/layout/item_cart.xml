<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">


    <data>

        <variable
            name="item"
            type="org.the_chance.honeymart.ui.feature.uistate.CartListProductUiState" />

        <variable
            name="listener"
            type="org.the_chance.honeymart.ui.feature.cart.CartInteractionListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Theme.HoneyMart.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_16"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/radius_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_order"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                app:loadImage="@{item.productImage.get(0)}" />

            <TextView
                android:id="@+id/text_order_number"
                style="@style/Theme.HoneyMart.Text.H5.DarkSubtle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_marginTop="@dimen/spacing_12"
                android:text="@{item.productName}"
                app:layout_constraintStart_toEndOf="@id/image_order"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Armchairr" />

            <TextView
                android:id="@+id/text_item_price"
                style="@style/Theme.HoneyMart.Text.H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_marginBottom="@dimen/spacing_16"
                android:background="@drawable/shape_background_price"
                android:paddingHorizontal="@dimen/spacing_8"
                android:paddingVertical="@dimen/spacing_4"
                android:text="@{item.productPrice.toString()}"
                android:textColor="@color/primary_100"
                app:FormatCurrency="@{item.productPrice}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_order"
                app:layout_constraintTop_toBottomOf="@+id/text_order_number"
                app:layout_constraintVertical_bias="1.0"
                tool:text="10,000,000$" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_minus_order"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/spacing_16"
                android:onClick="@{() -> listener.onClickMinusCountProductInCart(item.productId)}"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_add_item"
                app:layout_constraintEnd_toStartOf="@+id/text_view_number_of_items"
                app:layout_constraintTop_toTopOf="@+id/image_view_add_item"
                app:strokeWidth="0dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_minus" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/text_view_number_of_items"
                style="@style/Theme.HoneyMart.Text.H2.DarkModerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:text="@{item.productCount.toString()}"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_add_item"
                app:layout_constraintEnd_toStartOf="@+id/image_view_add_item"
                app:layout_constraintTop_toTopOf="@+id/image_view_add_item"
                tool:text="@string/number_of_items" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_add_item"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:backgroundTint="@color/primary_100"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="@{() -> listener.onClickAddCountProductInCart(item.productId)}"
                android:textColor="@color/white_300"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/Theme.HoneyMart.CircleShape"
                app:strokeWidth="0dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/icon_add_product" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>