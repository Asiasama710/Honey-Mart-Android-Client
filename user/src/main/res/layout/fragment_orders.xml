<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.the_chance.honeymart.ui.feature.orders.OrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.the_chance.honeymart.ui.feature.orders.OrdersFragment">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_orders_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_24"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_processing"
                style="@style/Theme.HoneyMart.Text.H5.Chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_8"
                android:onClick="@{()-> viewModel.getAllProcessingOrders()}"
                android:text="@string/processing"
                app:changeChipColorForOrderProcessing="@{viewModel.state.orderStates}" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_done"
                style="@style/Theme.HoneyMart.Text.H5.Chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_8"
                android:onClick="@{()-> viewModel.getAllDoneOrders()}"
                android:text="@string/done"
                app:changeChipColorForOrderDone="@{viewModel.state.orderStates}" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cancel"
                style="@style/Theme.HoneyMart.Text.H5.Chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.getAllCancelOrders()}"
                android:paddingHorizontal="@dimen/spacing_16"
                android:text="@string/cancel"
                app:changeChipColorForOrderCanceled="@{viewModel.state.orderStates}" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_16"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:items="@{viewModel.state.orders}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip_orders_group"
            tools:listitem="@layout/item_order" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:showIfTrue="@{viewModel.state.loading}" />

        <LinearLayout
            android:id="@+id/placeHolder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16"
            android:visibility="gone"
            app:hideIfLoading="@{viewModel.state.isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showIfNoItems="@{viewModel.state.orders}">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_wish_list_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/placeholder_order" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_placeholder_title"
                style="@style/Theme.HoneyMart.Text.H3.DarkModerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_32"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                app:placeHolderText="@{viewModel.state.orderStates}"
                tools:text="@string/you_dont_have_any_orders" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_placeholder_description"
                style="@style/Theme.HoneyMart.Text.H5.DarkIntense"
                android:layout_width="219dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_16"
                android:gravity="center"
                android:text="@string/order_placeholder_description" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_discover_markets"
                style="@style/Theme.HoneyMart.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_16"
                android:onClick="@{()->viewModel.onClickDiscoverMarketsButton()}"
                android:text="@string/discover_new_markets"
                app:icon="@drawable/icon_cart_white"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_8" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>